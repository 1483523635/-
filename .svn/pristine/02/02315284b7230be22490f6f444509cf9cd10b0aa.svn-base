using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Configuration;
namespace NetChatLib
{
    /// <summary>
    /// 读取配置文件帮助类
    /// </summary>
    public class ConfigHelper
    {
        /// <summary>
        /// 获取配置文件中的服务器Ip地址
        /// </summary>
        /// <returns>远程IP的字符串</returns>
        public static  string GetRemoteIP()
        {
            return ConfigurationManager.AppSettings["RemoteIP"].ToString();
        }
    }
}
